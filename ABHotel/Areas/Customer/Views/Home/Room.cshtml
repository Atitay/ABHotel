@model IEnumerable<ABHotel.Models.Rooms>

<br /><br />

<div class="col-4">
    <div class="row"> 
        <div class="dropdown">
            <a class="btn btn-info" asp-action="Room" asp-controller="Home"asp-route-id="">Select Room Type</a> 
            <div class="dropdown-content" >
                <a class="dropdown-item" asp-action="Room" asp-controller="Home" asp-route-id="1" >Standard Room</a>
                <a class="dropdown-item" asp-action="Room" asp-controller="Home" asp-route-id="2">Deluxe Room</a>
                <a class="dropdown-item" asp-action="Room" asp-controller="Home" asp-route-id="3">Junior Suite Room</a>
                <a class="dropdown-item" asp-action="Room" asp-controller="Home" asp-route-id="4">Suite Room</a>
            </div>
            </div>
        </div>
    </div>
    <br /><br />

          <div class="row">
              @foreach (var room in Model)
              {
                      <div class="col-4">
                          <div class="card mb-4">
                              <div class="card-header">
                                  <h4 class="my-0 font-weight-normal">
                                      <label style="font-size:23px; color:steelblue;">@room.Name</label>
                                  </h4>
                              </div>
                              <img class="card-img-top" style="width:350px; height:235px;" src="@room.Image" alt="Card Image" />
                              <div class="card-body">
                                  <div class="d-flex justify-content-between align-items-center">
                                      <div class="btn-group">
                                          <label style="font-size:20px; color:#a51313"><b>@room.Price</b> ฿/day</label>
                                      </div>
                                      <a asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@room.ID ">View Details</a>
                                  </div>
                              </div>
                          </div>
                      </div>
              }
          </div>
