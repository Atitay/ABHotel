@model IEnumerable<ABHotel.Models.RoomTypes>
@{
    ViewData["Title"] = "Index";
}
<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="table">Room Types List</h2>
    </div>
    <div class="col-6  text-right">
        <a asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i> &nbsp; New Room Type</a>
    </div>
</div>

<br /> <br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.ID" />
                </td>
            </tr>
        }
    </table>
</div>
